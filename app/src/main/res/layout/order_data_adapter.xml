<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_2"
    android:paddingBottom="@dimen/dp_2"
    android:orientation="horizontal">

    <com.kproduce.roundcorners.RoundTextView
        app:rRadius="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_width="@dimen/dp_5"
        android:layout_height="match_parent"
        android:background="@color/gray1">
    </com.kproduce.roundcorners.RoundTextView>

   <LinearLayout
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <TextView
           android:id="@+id/order_data_adapter_orderno"
           android:text="订单号"
           android:textSize="@dimen/sp_10"
           android:paddingLeft="@dimen/dp_10"
           android:paddingRight="@dimen/dp_10"
           android:gravity="left|center"
           android:textColor="@color/black1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       </TextView>

       <TextView
           android:id="@+id/order_data_adapter_money"
           android:text="价格"
           android:textColor="@color/red1"
           android:textSize="@dimen/sp_14"
           android:paddingLeft="@dimen/dp_10"
           android:paddingRight="@dimen/dp_10"
           android:gravity="left|center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       </TextView>

       <TextView
           android:id="@+id/order_data_adapter_type"
           android:text="类型"
           android:textColor="@color/blue1"
           android:textSize="@dimen/sp_10"
           android:gravity="right|left"
           android:paddingLeft="@dimen/dp_10"
           android:paddingRight="@dimen/dp_10"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       </TextView>
   </LinearLayout>

</LinearLayout>